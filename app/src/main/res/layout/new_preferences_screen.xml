                    android:textColor="@color/black"
                    android:textSize="12sp"

                    app:boxBackgroundMode="outline"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/comp_graph_button"
